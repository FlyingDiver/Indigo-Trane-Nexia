<?xml version="1.0"?>
<Devices>
    <SupportURL>https://forums.indigodomo.com/viewforum.php?f=318</SupportURL>
     <Device type="custom" id="NexiaAccount">
        <Name>Trane Home User Account</Name>
        <ConfigUI>
            <Field id="username" type="textfield">
                <Label>Username:</Label>
            </Field>
            <Field id="password" type="textfield" secure="true">
                <Label>Password:</Label>
            </Field>
            <Field id="house_id" type="textfield">
                <Label>House ID:</Label>
            </Field>
            <Field id="house_idNote" type="label" fontSize="small" fontColor="darkgray">
                <Label>Your house_id. You can get this from logging into the Trane Home website and looking at the url for your climate device. 
                https://www.tranehome.com/houses/&lt;house_id&gt;/climate</Label>
            </Field>
        </ConfigUI>
        <States>
            <State id="authenticated">
                <ValueType boolType="YesNo">Boolean</ValueType>
                <TriggerLabel>Authenticated</TriggerLabel>
                <ControlPageLabel>Authenticated</ControlPageLabel>
            </State>
        </States>
        <UiDisplayStateId>authenticated</UiDisplayStateId>
    </Device>
    <Device type="thermostat" id="NexiaThermostat">
        <Name>Trane Thermostat</Name>
        <ConfigUI>
            <Field id="NumTemperatureInputs"         type="textfield" defaultValue="0"     hidden="true"/>
            <Field id="NumHumidityInputs"            type="textfield" defaultValue="1"     hidden="true"/>
            <Field id="SupportsHeatSetpoint"         type="checkbox"  defaultValue="false" hidden="true"/>
            <Field id="SupportsCoolSetpoint"         type="checkbox"  defaultValue="false" hidden="true"/>
            <Field id="SupportsHvacOperationMode"    type="checkbox"  defaultValue="false" hidden="true"/>
            <Field id="SupportsHvacFanMode"          type="checkbox"  defaultValue="true"  hidden="true"/>
            <Field id="ShowCoolHeatEquipmentStateUI" type="checkbox"  defaultValue="true"  hidden="true"/>
            <Field id="SupportsStatusRequest"        type="checkbox"  defaultValue="false" hidden="true"/>

            <Field id="nexia_account" type="men">
                <Label>Trane Home Account:</Label>
                <List class="self" method="get_account_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
            <Field id="nexia_thermostat" type="men">
                <Label>Thermostat:</Label>
                <List class="self" filter="Available" method="get_thermostat_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
        </ConfigUI>
         <States>
            <State id="thermostat_name">
